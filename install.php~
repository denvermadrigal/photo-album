		<!-- content: begin -->
		<div class='container'>
			<form class='form-signin' id='frm_install' method='post' action='install.php' autocomplete='off'>
				<div class='page-header'>
					<h1 class='form-signin-heading'>{album.install}</h1>
				</div>
				<h3>Account Information</h3>
				<input type='text' name='name' class='input-block-level' placeholder='*Your Name' />
				<input type='text' name='email' class='input-block-level' placeholder='*Your Email' />
				<input type='password' name='password' class='input-block-level' placeholder='*Password' />
				<input type='password' name='verify_password' class='input-block-level' placeholder='*Verify Password' />
				<input type='text' name='site_name' class='input-block-level' placeholder='*Site Name' />
				<input type='text' name='meta_keyword' class='input-block-level' placeholder='Meta Keyword' />
				<textarea name='meta_description' class='input-block-level' placeholder='Meta Description'></textarea>
				<textarea name='footer_text' class='input-block-level' placeholder='Footer Text'></textarea>
				<input type='text' name='ga_tracking_id' class='input-block-level' placeholder='Google Analytics Tracking ID' />
